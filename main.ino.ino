void loop() {
  if (Serial.available()) {
    
    String command = Serial.readStringUntil('\n');
    command.trim();
    
    if( command = "MOVE_FORWARD"){
     motorsL.setM1Speed(150);
     motorsL.setM2Speed(150);
     motorsR.setM1Speed(150);
     motorsR.setM2Speed(150);
    }
    if( command = "MOVE_BACKWARD"){
    motorsL.setM1Speed(-150);
    motorsL.setM2Speed(-150);
    motorsR.setM1Speed(-150);
    motorsR.setM2Speed(-150);
    }
    if( command = "TURN_LEFT"){
     motorsL.setM1Speed(-150);
     motorsL.setM2Speed(-150);
     motorsR.setM1Speed(150);
     motorsR.setM2Speed(150);
    }
    if( command = "TURN_RIGHT"){
     motorsL.setM1Speed(150);
     motorsL.setM2Speed(150);
     motorsR.setM1Speed(-150);
     motorsR.setM2Speed(-150);
    }
    if( command = "NO_INPUT"){
     motorsL.setM1Speed(0);
     motorsL.setM2Speed(0);
     motorsR.setM1Speed(0);
     motorsR.setM2Speed(0);
    }
    
  if(millis() - sensor_update_timer > 500) {
    sensor_update_timer = millis();
 sensors_event_t accel;
  sensors_event_t gyro;
  sensors_event_t temp;
  sox.getEvent(&accel, &gyro, &temp);

  Serial.print("\t\tTemperature ");
  Serial.print(temp.temperature);
  Serial.println(" deg C");

/* Display the results (acceleration is measured in m/s^2) */
  Serial.print("\t\tAccel X: ");
  Serial.print(accel.acceleration.x);
  Serial.print(" \tY: ");
  Serial.print(accel.acceleration.y);
  Serial.print(" \tZ: ");
  Serial.print(accel.acceleration.z);
  Serial.println(" m/s^2 ");

  /* Display the results (rotation is measured in rad/s) */
  Serial.print("\t\tGyro X: ");
  Serial.print(gyro.gyro.x);
  Serial.print(" \tY: ");
  Serial.print(gyro.gyro.y);
  Serial.print(" \tZ: ");
  Serial.print(gyro.gyro.z);
  Serial.println(" radians/s ");
  Serial.println();

  if (! bmp.performReading()) {
    Serial.println("Failed to perform reading :(");
    return;
  }
  Serial.print("Temperature = ");
  Serial.print(bmp.temperature);
  Serial.println(" *C");

  Serial.print("Pressure = ");
  Serial.print(bmp.pressure / 100.0);
  Serial.println(" hPa");

  Serial.print("Approx. Altitude = ");
  Serial.print(bmp.readAltitude(SEALEVELPRESSURE_HPA));
  Serial.println(" m");

  Serial.println();
  }
  }

